<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iffi.mah.preetha"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.VIBRATE"/> 
    

    <application
        android:icon="@drawable/radar_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar"
        android:name="My_Application">
        
        <activity
            android:name=".Our_Splash"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Options"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/YourTheme"> >
            <intent-filter>
                <action android:name="android.intent.action.OPTIONS" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Menu_Screen" 
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".Play"
            android:screenOrientation="landscape"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity android:name=".Instructions"
            android:screenOrientation="landscape" >
        </activity>
        <activity android:name=".Score" 
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".PausedGameScreen"
            android:theme="@style/YourTheme"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".EndOfGame"
            android:theme="@style/YourTheme"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Are_you_sure"
            android:theme="@style/YourTheme"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>